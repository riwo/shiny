        <EmbeddedResource Remove="Power\Platforms\Uwp\**" />
        <EmbeddedResource Remove="Power\Platforms\watchOS\**" />
        <EmbeddedResource Remove="Settings\Platforms\Tizen\**" />
        <EmbeddedResource Remove="Settings\Platforms\Uwp\**" />
        <None Remove="IO\Platforms\Tizen\**" />
        <None Remove="IO\Platforms\Uwp\**" />
