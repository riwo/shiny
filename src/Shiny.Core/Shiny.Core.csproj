        <Compile Remove="Power\Platforms\tvOS\**" />
        <Compile Remove="Power\Platforms\Uwp\**" />
        <Compile Remove="Power\Platforms\watchOS\**" />
        <Compile Remove="Settings\Platforms\Tizen\**" />
        <Compile Remove="Settings\Platforms\Uwp\**" />
        <None Include="**\Platforms\**\*.cs" />
        <EmbeddedResource Remove="IO\Platforms\Tizen\**" />
        <EmbeddedResource Remove="IO\Platforms\Uwp\**" />
        <EmbeddedResource Remove="Jobs\Platforms\Tizen\**" />
        <EmbeddedResource Remove="Jobs\Platforms\Uwp\**" />
        <EmbeddedResource Remove="Jobs\Platforms\watchOS\**" />
        <EmbeddedResource Remove="Net\Platforms\Tizen\**" />
